<h1>Items</h1>

<% if @items.empty? %>
  <b> No items </b>
<% else %>
  <table>
    <tr>
      <th>Item id</th>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>

    <% @items.each do |i| %>
      <tr data-item_id="<%= i.id %>">
        <td><%= i.id %></td>
        <td>
          <%#= image_tag i.image.file, width: '50px', height: '50px' if i.image %>
          <%= link_to i.name, item_path(i) %></p></td>
        <td><%= i.price %> $</td>
        <td><span class="deleteAction">Delete</span></td>
        <td>Rating: <%= i.votes_count %> <%= link_to '+', upvote_item_path(i) %></td>
      </tr>

    <% end %>
  </table>
<% end %>